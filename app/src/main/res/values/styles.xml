<resources>
    <style name="RoundedCornerTransparentAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item> <!-- Remove window content overlay -->
        <item name="android:windowIsFloating">true</item> <!-- Make the window floating -->
        <item name="android:windowNoTitle">true</item> <!-- Hide the window title -->
        <item name="android:windowIsTranslucent">true</item> <!-- Make the window translucent -->
        <item name="android:windowCloseOnTouchOutside">false</item> <!-- Disable closing on outside touch -->
        <item name="android:windowActionBar">false</item> <!-- Hide action bar if using AppCompat -->
        <item name="android:background">@drawable/rounded_bg</item> <!-- Set background with rounded corners -->
    </style>


</resources>
